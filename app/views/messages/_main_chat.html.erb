</div>
<div class="messages">
  <div class="message">
    <div class="message-post">
      <div class=name-date>
        <p class="post-name">Tom<span class="post-date">2020/3/31(WED) 12:43:30</span></p>
      </div>
      <div class="post-content">おはよう</div>
    </div>
    <div class="message-post">
      <div class=name-date>
        <p class="post-name">Sim<span class="post-date">2020/3/31(WED) 12:43:30</span></p>
      </div>
      <div class="post-content">おはよう</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>